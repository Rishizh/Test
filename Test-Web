<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Webseiten-Editor</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            display: flex;
            flex-direction: column;
        }
        #editor {
            margin-top: 20px;
        }
        #preview {
            border: 1px solid #ccc;
            padding: 10px;
            margin-top: 20px;
            min-height: 200px;
        }
    </style>
</head>
<body>

    <h1>Webseiten-Editor</h1>
    <label for="title">Titel der Webseite:</label>
    <input type="text" id="title" placeholder="Gib den Titel ein" oninput="updatePreview()">

    <label for="content">Inhalt der Webseite:</label>
    <textarea id="content" rows="10" placeholder="Gib den Inhalt ein" oninput="updatePreview()"></textarea>

    <div id="editor">
        <h2>Vorschau:</h2>
        <div id="preview"></div>
    </div>

    <script>
        function updatePreview() {
            const title = document.getElementById('title').value;
            const content = document.getElementById('content').value;

            const preview = document.getElementById('preview');
            preview.innerHTML = `<h1>${title}</h1><p>${content}</p>`;
        }
    </script>

</body>
</html>
